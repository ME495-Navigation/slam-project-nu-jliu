<?xml version="1.0"?>
<launch>
    <arg name="config_file" default="basic_world.yaml" />

    <include file="$(find-pkg-share nuturtle_description)/launch/load_all.launch.xml">
        <arg name="use_rviz" value="false" />
    </include>

    <node pkg="nusim" exec="nusim" name="nusim">
        <param from="$(find-pkg-share nusim)/config/$(var config_file)" />
    </node>

    <node pkg="rviz2" exec="rviz2" name="rviz2"
        args="-d $(find-pkg-share nusim)/config/nusim.rviz" />
</launch>